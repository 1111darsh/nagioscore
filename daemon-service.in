[Unit]
Description=Nagios Core
Documentation=https://www.nagios.org/documentation
After=network.target local-fs.target

[Service]
Type=forking
User=@nagios_user@
Group=@nagios_grp@
PIDFile=@lockfile@
ExecStartPre=@bindir@/nagios -v @localstatedir@/etc/nagios.cfg
ExecStart=@bindir@/nagios -d @localstatedir@/etc/nagios.cfg
ExecStop=/bin/kill -s TERM ${MAINPID}
ExecStopPost=/usr/bin/rm -f @localstatedir@/rw/nagios.cmd

[Install]
WantedBy=multi-user.target
